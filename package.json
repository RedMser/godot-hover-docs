{
  "name": "godot-hover-docs",
  "displayName": "Godot Hover Docs",
  "description": "Show XML documentation when hovering symbols in Godot's C++ code.",
  "version": "0.0.1",
  "icon": "icon.png",
  "author": {
    "name": "RedMser"
  },
  "publisher": "RedMser",
  "repository": {
    "url": "https://github.com/RedMser/godot-hover-docs"
  },
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Education"
  ],
  "activationEvents": [
    "workspaceContains:editor/icons/Godot.svg"
  ],
  "main": "./out/extension.js",
  "contributes": {},
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "fast-xml-parser": "^4.0.12"
  }
}
